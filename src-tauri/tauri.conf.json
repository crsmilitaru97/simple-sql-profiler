{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Simple SQL Profiler",
  "version": "0.2.0",
  "identifier": "com.simple-sql-profiler.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Simple SQL Profiler",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "visible": false,
        "backgroundColor": "#0f172a",
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; connect-src 'self' ipc: http://ipc.localhost ws://localhost:1421; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:;"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/crsxmilitaru/simple-sql-profiler/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNDNzQ4NjRGNDlBRkFDRjMKUldUenJLOUpUNFowUE1kTlc1RzdYOXU1NjQwbEk4VUxkV3BmOTBicXpTQ2kwTlZVT2RlYUpJVXcK"
    }
  }
}